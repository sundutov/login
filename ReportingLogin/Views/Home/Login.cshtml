@{
    Layout = "~/Views/Shared/Main.cshtml";
    ViewBag.Title = "Login";
}

<body ng-app="MyApp">
<div class="login" ng-controller="LoginFormController">
    <form novalidate name="f1" ng-submit="Login()">
        <div ng-show="!IsLogedIn">
            <h2>Log in</h2>
            <input type="text" ng-model="LoginData.Login" name="cUsername" ng-class="Submitted?'ng-dirty':''" required autofocus/>
            
            <input type="password" ng-model="LoginData.Password" name="cPassword" ng-class="Submitted?'ng-dirty':''" required autofocus/>
            
            <input class="button" type="submit" value="Log in"/>
        </div>
    </form>
</div>
</body>





